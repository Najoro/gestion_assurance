{% extends 'base.html.twig' %}

{% block title %}Espace Client
{% endblock %}

{% block body_class %}
	{{ parent() }}
	client-page
{% endblock %}

{% block main %}
	<div class="client-space container my-4">
		<div class="d-flex justify-content-between align-items-center flex-wrap">
			<h1 class="mb-3">Liste de tous les clients</h1>
			<div class="">
				<a href="{{ path('client_new') }}" class="btn btn-primary mb-3">
					<i class="fa-solid fa-plus mx-2"></i>
					Nouveau Client
				</a>
			</div>
		</div>
		<div class="">
			<div class="card-white-shadow d-flex flex-wrap">
				{% for client in clients %}
					<div class="card-client col-md-3 bg-white m-3">
						<div class="client-info">
							<ul>
								<li>
									<div class="icone"></div>
									{{client.fullName}}
								</li>
								<li>
									<div class="icone"></div>
									{{client.email}}
								</li>
								<li>
									<div class="icone"></div>
									{{client.Adress}}
								</li>
								<li>
									<div class="icone"></div>
									{{client.phoneNumber}}
								</li>
							</ul>
						</div>
						<div class="client-action">
							<div class="dropdown dropdown-client btn-drop">
								<button class="btn btn-default dropdown-toggle bt-actions" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
									<span class="icon--more"></span>
								</button>
								<ul class="dropdown-menu dropdown-menu-right dropdown-text" aria-labelledby="dropdownMenuButton1" style="">
									<li>
										<a href="{{ path('client_edit',{id : client.id}) }}" class="btn py-0 dropdown-item edit-medicament">Modifier<i class="fa-solid fa-pen-to-square ms-1"></i>
										</a>
									</li>
									<li>
										<button id="delete-client" class="btn py-0 btn-delete-medicine dropdown-item" data-fullName={{client.fullName}} data-url="{{path('client_delete',{id : client.id})}}">Supprimer<i class="fa-solid fa-trash ms-1"></i>
										</button>
									</li>
								</ul>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}

